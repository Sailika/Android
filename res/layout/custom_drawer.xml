<com.example.whirlpool.SlidingDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dd="http://schemas.android.com/apk/res/com.example.whirlpool"
    android:id="@+id/slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    dd:allowSingleTap="true"
    android:paddingLeft="10dp"
    dd:content="@+id/content"
    dd:handle="@+id/handle"
    dd:orientation="0" >

    <LinearLayout
        android:id="@id/handle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical" >

        <com.example.whirlpool.VerticalButton
            android:id="@+id/home_fridge_menu_btn"
            style="@style/HomeSlideItem"
            android:onClick="fridgeClick"
            android:background="@drawable/borderless"
            android:text="@string/fridge" />

        <com.example.whirlpool.VerticalButton
            android:id="@+id/home_oven_menu_btn"
            style="@style/HomeSlideItem"
            android:background="@drawable/button"
            android:onClick="ovenClick"
            android:text="@string/oven" />

        <com.example.whirlpool.VerticalButton
            android:id="@+id/home_fast_settings_menu_btn"
            style="@style/HomeSlideItem"
            android:onClick="fastSettingsClick"
            android:background="@drawable/button"
            android:text="@string/fast_settings" />

        <com.example.whirlpool.VerticalButton
            android:id="@+id/home_settings_menu_btn"
            style="@style/HomeSlideItem"
            android:onClick="settingsClick"
            android:background="@drawable/borderless"
            android:text="@string/settings" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout android:id="@+id/home_menu_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>
    </LinearLayout>

</com.example.whirlpool.SlidingDrawer>